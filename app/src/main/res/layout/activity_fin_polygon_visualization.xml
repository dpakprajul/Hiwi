    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dateSelections"
        android:text = "Select Date"
        android:layout_below="@+id/time_text_view_end"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/objects_filter"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="50dp"
        android:textColor="#009688"
        android:gravity="right"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/tv_objectSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_view"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:gravity="left"
        android:text="@string/object_selection"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Spinner
        android:id="@+id/objects_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_objectSelection"
        android:layout_marginLeft="50dp" />


    <!--Text View to display Date-->
    <TextView
        android:id="@+id/dateselection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_view_end"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-10dp"
        android:gravity="center"
        android:text="" />

    <!--Button to select date-->

    <TextView
        android:id="@+id/button"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateselection"
        android:layout_marginStart="310dp"
        android:layout_marginLeft="100dp"
        android:typeface="sans"

        android:gravity="right"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:text="@string/ic_happy_font"
        android:textColor="@color/ap_gray"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/load_file_from_server"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/objects_filter"
        android:layout_marginLeft="2dp"
        android:fontFamily="@font/coda"
        android:text="Update Graph"
        android:textAllCaps="false"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <EditText
        android:id="@+id/et_currentDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/load_file_from_server"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:gravity="right"
        android:textColor="#009688"
        android:inputType="datetime"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/load_file_from_server">

        <TextView
            android:id="@+id/tv_graphTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/graphplot_title"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plot"
            style="@style/APDefacto.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_graphTitle"
            android:fontFamily="@font/coda"
            android:typeface="sans"
            ap:domainTitle="East (m)    540031"
            ap:domainTitleTextSize="14sp"
            ap:lineLabelTextColorBottom="@color/ap_transparent"
            ap:lineLabelTextColorLeft="@color/ap_transparent"
            ap:lineLabels="right|top"
            ap:paddingBottom="2dp"
            ap:paddingLeft="2dp"
            ap:paddingRight="2dp"
            ap:rangeTitle="North (m)    3251397"
            ap:rangeTitleTextSize="14sp" />

    </RelativeLayout>

</RelativeLayout>