    <TextView
        android:id="@+id/tv_objectSelection13"
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_below="@+id/objects_filter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="1dp"
        android:gravity="left"
        android:text="@string/gps_time"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seriesSelection"
        android:text = "@string/series_selection"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/tv_seriesSelection"
        android:id="@+id/rb_timeSeries"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_easterns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/series_eastern"
            android:textSize="16sp"
            android:typeface="sans"/>

        <RadioButton
            android:id="@+id/rb_northerns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/series_northing"
            android:textSize="16sp"
            android:typeface="sans"/>
    </RadioGroup>

    <TextView
