    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seriesSelection"
        android:text = "@string/series_selection"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/time_text_view"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/tv_seriesSelection"
        android:id="@+id/rb_timeSeries"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_easterns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/series_eastern"
            android:textSize="16sp"
            android:typeface="sans"/>

        <RadioButton
            android:id="@+id/rb_northerns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/series_northing"
            android:textSize="16sp"
            android:typeface="sans"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tv_objectSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="left"
        android:text="@string/object_selection"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Spinner
        android:id="@+id/objects_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_objectSelection"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/dateselection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_view_end"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-10dp"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/button"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateselection"
        android:layout_marginStart="310dp"
        android:layout_marginLeft="100dp"
        android:typeface="sans"

        android:gravity="right"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:text="@string/ic_happy_font"
        android:textColor="@color/ap_gray"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/load_file_from_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle"
        android:layout_below="@+id/rb_timeSeries"
        android:layout_marginLeft="2dp"
        android:fontFamily="@font/coda"
        android:text="@string/read_text_file_from_assets_folder"
        android:textAllCaps="false"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <EditText
        android:id="@+id/et_currentDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_timeSeries"
        android:layout_alignBaseline="@id/load_file_from_server"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:cursorVisible="false"
        android:inputType="date"
        android:textColor="#009688"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/load_file_from_server">

        <TextView
            android:id="@+id/tv_graphTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/graphview_title"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/positiontimeseries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_graphTitle" />

    </RelativeLayout>

</RelativeLayout>